<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--review_user_pic, review_user_name,review_date , review_stars , review_body
    -->


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="1sp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:minHeight="79dp"
                    android:minWidth="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/review_user_pic_demo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top"
                        android:layout_margin="10dp"
                        android:src="@raw/demo_image" />

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/review_user_pic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="20dp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/divider_line_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"

                    android:layout_marginTop="10dp"
                    android:background="#1a2fff00"
                    android:minWidth="1dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="80dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:minHeight="16dp"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:id="@+id/ratings_holder_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="4sp">

                            <LinearLayout
                                android:id="@+id/star_holder"
                                android:layout_width="35dp"
                                android:layout_height="16dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/review_stars"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="2dp"
                                        android:gravity="right|center_vertical"
                                        android:text="5"
                                        android:textColor="#ffffff"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="12dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/ic_star_black_24dp" />
                                </LinearLayout>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/review_user_title"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="Simply awesome..."
                                android:textColor="#9c000000"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/review_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Camera works awesome and the battery is absolutely amazing but ii just diodnt like the way the it is handled in your hand idi dbniued wbnfiuwe fiuefbhwiubfw eiubfhuwibfwiuf ewbniufbwef wfiubwuief fiuwnbfiuwebw fkwjewiufw ibfwiubfef wfiubfwiuefhwif fwhef bueibf"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:minHeight="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/review_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Burhan ud din"
                            android:textColor="@color/border"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/review_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="28 Nov, 2018"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cardview_shadow_start_color"
                android:minHeight="1dp"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>