    <LinearLayout
        android:id="@+id/gettingPlacesPLL"
        android:layout_width="match_parent"
        android:background="#73ffffff"
        android:visibility="gone"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!--  <com.mypopsy.widget.FloatingSearchView
          android:id="@+id/search"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingTop="16dp"
          android:paddingRight="8dp"
          android:paddingLeft="8dp"
          android:background="#90000000"
          app:fsv_icon="@drawable/ic_menu_black_24dp"
          android:hint="Enter Here"/>-->

    <Button
        android:id="@+id/btn_show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Modle Bottom Sheet"
        android:visibility="gone" />

    <eminayar.com.cardhelper.HelperCardsLayout
        android:id="@+id/cardHelper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:back_icon="@drawable/helper_back"
        app:overlay_color="#000000"
        app:toolbar_title="" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/explainPlaceLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/placeTitleMaps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="20dp"
                                android:text="IAC Software Solutions"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/isVerifiedLL"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:src="@android:drawable/checkbox_on_background"
                                android:visibility="gone"
                                app:srcCompat="@android:drawable/checkbox_on_background" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:gravity="left|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/placeStarsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:text="5.0"
                                android:textColor="@android:color/holo_orange_dark" />

                            <RatingBar
                                android:id="@+id/placeStarsRB"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d4d4d4"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#f4f4f4"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="2dp"
                                    android:src="@drawable/ic_info_outline_black_24dp" />

                                <Button
                                    android:id="@+id/takeMetoMaps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:text="MORE INFO"
                                    android:textColor="#979797"
                                    android:textSize="12sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center_vertical|center"
                                android:orientation="horizontal"
                                android:visibility="visible">


                                <ImageView
                                    android:id="@+id/unsubscribeToNotifications"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cropToPadding="true"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_notifications_active_black_24dp"
                                    android:visibility="gone" />


                                <ImageView
                                    android:id="@+id/subscribeToNotifications"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cropToPadding="true"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_notifications_none_black_24dp"
                                    android:visibility="gone" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <ProgressBar
                                    android:id="@+id/progressBarSubs"
                                    style="?android:attr/progressBarStyle"
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_weight="1" />

                                <Button
                                    android:id="@+id/subscribeToPosts"
                                    android:layout_width="40dp"
                                    android:layout_height="35dp"
                                    android:layout_weight="1"
                                    android:background="#03232e"
                                    android:text="Subscribe"
                                    android:textColor="#ffffff"
                                    android:textSize="12sp"
                                    android:visibility="gone" />

                                <Button
                                    android:id="@+id/unSubscribeToPosts"
                                    android:layout_width="40dp"
                                    android:layout_height="35dp"
                                    android:layout_weight="1"
                                    android:background="#03232e"
                                    android:text="UnSubscribe"
                                    android:textColor="#ffffff"
                                    android:textSize="12sp"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>



    <Button
        android:visibility="gone"
        android:id="@+id/B_hopistals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TF_location"
        android:onClick="onClick"
        android:text="Hospitals" />

    <Button
        android:visibility="gone"

        android:id="@+id/B_schools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TF_location"
        android:layout_toEndOf="@+id/B_hopistals"
        android:onClick="onClick"
        android:text="Schools" />

    <Button
        android:id="@+id/B_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TF_location"
        android:layout_toEndOf="@+id/B_schools"
        android:onClick="onClick"
        android:visibility="gone"
        android:text="Restautants" />

    <Button
        android:visibility="gone"

        android:id="@+id/B_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/B_restaurants"
        android:layout_toEndOf="@+id/B_restaurants"
        android:onClick="onClick"
        android:text="To" />




    <!--<include layout="@layout/search_location"/>-->



</RelativeLayout>